{
  "Parameters": {
    "PatternType": "WebApplication",
    "PatternComplexity": "Advanced",
    "ProjectName": "MyWebApp",
    "Environment": "staging",
    "Region": "us-east-1",
    "AvailabilityZones": ["us-east-1a", "us-east-1b"],
    
    "VPCConfig": {
      "CidrBlock": "10.1.0.0/16",
      "SubnetPattern": "Advanced",
      "EnableNatGateway": true,
      "SingleNatGateway": false
    },
    
    "LoadBalancerConfig": {
      "Type": "ApplicationLoadBalancer",
      "Scheme": "internet-facing",
      "EnableSSL": true,
      "CertificateArn": "arn:aws:acm:us-east-1:123456789012:certificate/12345678-1234-1234-1234-123456789012"
    },
    
    "ComputeConfig": {
      "InstanceType": "t3.medium",
      "MinSize": 2,
      "MaxSize": 6,
      "DesiredCapacity": 2,
      "EnableAutoScaling": true
    },
    
    "DatabaseConfig": {
      "Engine": "mysql",
      "InstanceClass": "db.t3.medium",
      "AllocatedStorage": 100,
      "EnableMultiAZ": true,
      "EnableBackup": true,
      "BackupRetentionPeriod": 7
    },
    
    "CacheConfig": {
      "Engine": "redis",
      "NodeType": "cache.t3.micro",
      "NumCacheNodes": 2,
      "EnableClusterMode": false
    },
    
    "MonitoringConfig": {
      "EnableCloudWatch": true,
      "EnableXRayTracing": true,
      "LogRetentionDays": 30,
      "EnableDashboard": true
    }
  },
  "Tags": {
    "Owner": "DevOps Team",
    "CostCenter": "Engineering",
    "Environment": "Staging",
    "Architecture": "WebApplication",
    "WellArchitected": "Reliability,PerformanceEfficiency"
  },
  "Description": "ステージング環境用の高度なWebアプリケーションパターン - ALB、RDS、ElastiCache統合"
}