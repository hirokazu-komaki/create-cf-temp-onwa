{
  "schema": "http://json-schema.org/draft-07/schema#",
  "title": "CloudFormation Template Metadata Schema",
  "description": "Schema for Well-Architected CloudFormation template metadata",
  "type": "object",
  "required": ["name", "version", "description", "wellArchitectedCompliance"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Template name"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Template version in semantic versioning format"
    },
    "description": {
      "type": "string",
      "description": "Template description"
    },
    "category": {
      "type": "string",
      "enum": ["foundation", "networking", "compute", "integration", "patterns"],
      "description": "Template category"
    },
    "service": {
      "type": "string",
      "description": "Primary AWS service"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Dependency name"
          },
          "type": {
            "type": "string",
            "enum": ["stack", "template", "service"],
            "description": "Dependency type"
          },
          "required": {
            "type": "boolean",
            "default": true,
            "description": "Whether dependency is required"
          }
        }
      },
      "description": "Template dependencies"
    }
  }
},
    
"wellArchitectedCompliance": {
      "type": "object",
      "description": "Well-Architected Framework compliance mapping",
      "properties": {
        "operationalExcellence": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^OPS[0-9]{2}-BP[0-9]{2}$"
          },
          "description": "Operational Excellence best practices"
        },
        "security": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^SEC[0-9]{2}-BP[0-9]{2}$"
          },
          "description": "Security best practices"
        },
        "reliability": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^REL[0-9]{2}-BP[0-9]{2}$"
          },
          "description": "Reliability best practices"
        },
        "performanceEfficiency": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^PERF[0-9]{2}-BP[0-9]{2}$"
          },
          "description": "Performance Efficiency best practices"
        },
        "costOptimization": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^COST[0-9]{2}-BP[0-9]{2}$"
          },
          "description": "Cost Optimization best practices"
        },
        "sustainability": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^SUS[0-9]{2}-BP[0-9]{2}$"
          },
          "description": "Sustainability best practices"
        }
      }
    },
    "configurationPatterns": {
      "type": "object",
      "description": "Available configuration patterns",
      "patternProperties": {
        "^[a-zA-Z][a-zA-Z0-9]*$": {
          "type": "object",
          "required": ["description"],
          "properties": {
            "description": {
              "type": "string",
              "description": "Pattern description"
            },
            "parameters": {
              "type": "object",
              "description": "Pattern-specific parameters"
            },
            "wellArchitectedFocus": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["operationalExcellence", "security", "reliability", "performanceEfficiency", "costOptimization", "sustainability"]
              },
              "description": "Well-Architected pillars this pattern focuses on"
            }
          }
        }
      }
    }
  }
}